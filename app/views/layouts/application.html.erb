<!DOCTYPE html>
<html>
  <head>
    <title>RecipeBox</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application.css"  %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="home">
      <p><%= link_to "Home", recipes_path, class: "nav-btn"%></p>
      <% if @current_user == nil %>
      <div class="navbar">
        <p><%= link_to "Sign-Up", new_user_path, class: "nav-btn"%></p>
        <p><%= link_to "Login", login_path, class: "nav-btn"%></p>
      </div>
      <% else %>
      <div class="navbar">
        <p><%= link_to "My Recipes", "/my_recipes", class: "nav-btn"%></p>
        <p><%= link_to "New Recipe", new_recipe_path, class: "nav-btn"%></p>
        <p><%= link_to "Logout", "/logout", method: :delete, class: "nav-btn" %></p>
      </div>
      <% end %>
      
    </div>
    <div class="flexbox_col">
      <%= yield %>
    </div>
  </body>
</html>
